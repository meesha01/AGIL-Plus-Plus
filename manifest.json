{
    "name" : "AGILTime++",
    "description" : "Adds features to SAP's AGILTime Tool",
    "version" : "0.0.1",
    "manifest_version" : 3,
    "action": {
        "default_popup":"popup/popup.html"
    },
    "icons": {
        "16": "res/icons/icon-16.png",
        "32": "res/icons/icon-32.png",
        "48": "res/icons/icon-48.png",
        "128": "res/icons/icon-128.png"
    },
    "web_accessible_resources": [
      {
        "resources": ["res/SaveTemplateForm.html", "res/FetchTemplateForm.html", "res/DurationShortcuts.html"],
        "matches": ["https://actesprd.launchpad.cfapps.eu10.hana.ondemand.com/*"]
      }
    ],
    "content_scripts": [
        {
          "js": [
            "scripts/constants.js", "scripts/util.js",  "scripts/ProjectEntry.js", "scripts/data-handler.js",
            "scripts/field-manipulator.js" ,"scripts/ui-injector.js"
          ],
          "matches": [
            "https://actesprd.launchpad.cfapps.eu10.hana.ondemand.com/*"
          ],
          "all_frames": true
        }
    ]    
}