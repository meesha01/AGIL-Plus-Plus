{
    "name" : "AGIL Time Extension",
    "description" : "Make SAP's AGIL Time usable",
    "version" : "0.0.1",
    "manifest_version" : 3,
    "action": {
        "default_popup":"popup/popup.html"
    },
    "icons": {
        "16": "res/icons/icon-16.png",
        "32": "res/icons/icon-32.png",
        "48": "res/icons/icon-48.png",
        "128": "res/icons/icon-128.png"
    },
    "web_accessible_resources": [
      {
        "resources": ["res/SaveTemplateForm.html", "res/FetchTemplateForm.html"],
        "matches": ["https://actesprd.launchpad.cfapps.eu10.hana.ondemand.com/*"]
      }
    ],
    "content_scripts": [
        {
          "js": ["scripts/save-data.js", "scripts/inject-ui.js"],
          "matches": [
            "https://actesprd.launchpad.cfapps.eu10.hana.ondemand.com/*"
          ],
          "all_frames": true
        }
    ]    
}